{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "semicolons": "always",
      "quoteStyle": "single"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": false
  }
}
